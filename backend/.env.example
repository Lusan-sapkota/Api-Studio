# Database
DATABASE_URL=sqlite:///./api_studio.db

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Frontend URL for CORS
FRONTEND_URL=http://localhost:56173

# Optional admin credentials for seeding
ADMIN_USERNAME=admin@example.com
ADMIN_PASSWORD=admin123

# Websocket debug
WEBSOCKET_DEBUG=true

# Server Settings (for start.py script)
# These are read by start.py, not by the Settings class
HOST=0.0.0.0
PORT=58123

# kindly tweak it in production to false
RELOAD=true

# Authentication Mode Configuration
# Set to "local" for single-user mode (no auth) or "hosted" for multi-user mode (with auth)
APP_MODE=local

# JWT Configuration (required for hosted mode)
JWT_SECRET=your-jwt-secret-key-change-in-production
JWT_EXPIRY=86400

# SMTP Configuration (required for hosted mode)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=your-email@gmail.com

# Bootstrap Configuration (required for hosted mode initial setup)
ADMIN_BOOTSTRAP_TOKEN=your-secure-bootstrap-token-change-this

# Security Settings
OTP_EXPIRY=600
MAX_LOGIN_ATTEMPTS=5
LOGIN_LOCKOUT_DURATION=900

# 2FA Settings
APP_NAME=API Studio

